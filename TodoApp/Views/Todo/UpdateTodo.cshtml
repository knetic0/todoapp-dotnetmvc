@model TodoApp.Models.Todo;
@{
}

<div class="container mt-5">
    <h1 class="text-left mb-4">Update Todo</h1>
    <form asp-action="UpdateTodo" asp-controller="Todo" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="@Model.Id" type="hidden" />
        <div class="form-group">
            <label for="title" class="mb-1">Title</label>
            <input type="text" asp-for="@Model.Title" class="form-control" id="title" placeholder="Enter title...">
        </div>
        <div class="form-group mt-3">
            <label for="desc" class="mb-1">Todo's description</label>
            <textarea placeholder="Enter description..." asp-for="@Model.Description" class="form-control" id="desc" rows="3"></textarea>
        </div>
        <div class="form-group mt-3">
            <label for="createdDate" class="mb-1">Created Date</label>
            <input type="text" asp-for="@Model.CreatedDate" class="form-control" id="createdDate" readonly>
        </div>
        <div class="form-group mt-3">
            <label for="updatedDate" class="mb-1">Updated Date</label>
            <input type="text" asp-for="@Model.UpdatedDate" class="form-control" id="updatedDate" readonly>
        </div>
        <div class="form-check mt-3">
            <input type="checkbox" asp-for="@Model.IsDone" class="form-check-input" id="isDone">
            <label for="isDone" class="form-check-label">Is Done</label>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Update</button>
    </form>
</div>
