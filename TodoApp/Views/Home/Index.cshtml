@model IEnumerable<TodoApp.Models.Todo>
@{
    ViewData["Title"] = "Your Todos";
}

@if(Model.Count() > 0)
{
    <div class="container mt-5">
        <h1 class="text-left mb-4">Todos List</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="list-group">
                    @foreach (Todo todo in Model!)
                    {
                        @(await Html.PartialAsync("_TodoItem", todo))
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="jumbotron">
        <h1 class="display-4">You've completed all your todos!</h1>
        <hr class="my-4">
        <p class="lead">
            If you want to create more todos, you can press the button below!
        </p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" asp-controller="Todo" asp-action="AddTodo" role="button">Create more todos</a>
        </p>
    </div>
}

